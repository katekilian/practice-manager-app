<div class="page-header">
  <h1>Today's Practice Assignments</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Practice Assignment</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @todays_tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= task.task_date.pretty_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Practice Assignment", new_task_path %>
